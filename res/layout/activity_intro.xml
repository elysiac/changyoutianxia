<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/mainbg"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="#eff2f7"
        android:orientation="vertical"
        
        >
            <LinearLayout 
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:id="@+id/intro1_lay"
                    >
                    <ImageView
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:src="@drawable/menu_train"
                        />
                    <TextView 
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="列车介绍"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="30dp"
                        android:textSize="20sp"
                        android:textColor="#353130"
                        />
                </LinearLayout>    
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:id="@+id/intro2_lay"
                    android:layout_marginTop="20dp"
                    >
                    <ImageView
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:src="@drawable/menu_station"
                        />
                    <TextView 
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="车站介绍"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="30dp"
                        android:textSize="20sp"
                        android:textColor="#353130"
                        />
                </LinearLayout> 
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:id="@+id/intro3_lay"
                    android:layout_marginTop="20dp"
                    >
                    <ImageView
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:src="@drawable/menu_city"
                        />
                    <TextView 
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="城市介绍"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="30dp"
                        android:textSize="20sp"
                        android:textColor="#353130"
                        />
                </LinearLayout> 
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:id="@+id/intro4_lay"
                    android:layout_marginTop="20dp"
                    >
                    <ImageView
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:src="@drawable/menu_ewm"
                        />
                    <TextView 
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="扫描二维码"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="30dp"
                        android:textSize="20sp"
                        android:textColor="#353130"
                        />
                </LinearLayout>         
                    
            </LinearLayout> 
     
</LinearLayout>